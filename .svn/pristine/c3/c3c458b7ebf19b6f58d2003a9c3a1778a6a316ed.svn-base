<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/messageConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/messageEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:autoLink="phone"
        android:backgroundTint="@color/blue_grey_500"
        android:backgroundTintMode="src_over"
        android:hint="@string/compose_message"
        android:inputType="textAutoCorrect"
        android:lineSpacingExtra="8sp"
        android:lines="3"
        android:maxLines="6"
        android:textAlignment="textStart"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/sendButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="36dp"
        android:elevation="6dp"
        android:text="@string/button_send"
        android:visibility="visible"
        app:layout_constraintBaseline_toBaselineOf="@+id/messageEditText"
        app:layout_constraintLeft_toRightOf="@+id/messageEditText"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>

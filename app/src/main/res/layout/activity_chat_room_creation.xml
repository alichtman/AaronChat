<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/messageConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <Button
        android:id="@+id/createButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:backgroundTint="@color/colorAccent"
        android:elevation="6dp"
        android:clickable="true"
        android:text="@string/button_create"
        android:textColor="@color/white"
        android:textColorHighlight="@color/btn_login_bg"
        android:textColorLink="@color/btn_login_bg"
        android:visibility="visible"
        app:layout_constraintLeft_toRightOf="@+id/chatRoomEditText"
        app:layout_constraintRight_toRightOf="@+id/parent" />

    <EditText
        android:id="@+id/chatRoomEditText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/grey_100"
        android:backgroundTintMode="src_over"
        android:elegantTextHeight="false"
        android:hint="@string/chat_room_hint"
        android:inputType="textAutoCorrect"
        android:lines="3"
        android:maxLines="6"
        android:nestedScrollingEnabled="true"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/white"
        android:textColorHighlight="@color/blue_grey_500"
        android:textColorHint="@color/white"
        app:layout_constraintRight_toLeftOf="@+id/createButton" />
</android.support.design.widget.CoordinatorLayout>
